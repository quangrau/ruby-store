<%= form_for([:admin, @product], :html => {class: 'col-md-6'}) do |f| %>
  <div class="form-group">
    <%= f.label :category_id, 'Category Name' %><br>
    <%= select_tag(:category_id, options_from_collection_for_select(@category, :id, :name), {:class => 'form-control'}) %>

  </div>
  <div class="form-group">
    <%= f.label :name, 'Product Name' %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: "form-control" %>
  </div>
 
  <div class="form-group">
    <%= f.submit nil, :class => 'btn btn-success' %>
  </div>
<% end %>
<div class="head-box">
	<div class="container">
		<h1>Products</h1>
		<h3>List all of products in store</h3>
	</div>
</div>
<div class="container" id="main">
	<%= link_to 'Create new Product', new_admin_product_path, class: "btn btn-success pull-right" %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Product Name</th>
				<th>Category Name</th>
				<th>Price</th>
				<th colspan="2"></th>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |product| %>
			<tr>
				<td><%= product.id %></td>
				<td><%= product.name %></td>
				<td><%= product.category.name %></td>
				<td><%= product.price %></td>
				<td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
			    <td><%= link_to 'Destroy', admin_product_path(product),
			                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>


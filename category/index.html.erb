<div class="head-box">
	<div class="container">
		<h1>Categories</h1>
		<h3>List all of categories in store</h3>
	</div>
</div>
<div class="container" id="main">
	<%= link_to 'Create new Category', new_admin_category_path, class: "btn btn-primary pull-right" %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Products</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @categories.each do |category| %>
			<tr>
				<td><%= category.id %></td>
				<td><%= category.name %></td>
				<td><%= category.products.length %></td>
				<td><%= link_to 'Show', admin_category_path(category) %></td>
			    <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
			    <td><%= link_to 'Destroy', admin_category_path(category),
			                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>


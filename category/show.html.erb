<div class="head-box">
	<div class="container">
		<h1>Category detail</h1>
		<h3>Show category info and list all products in this category</h3>
	</div>
</div>
<div class="container" id="main">
<div class="row">
	<div class="col-md-6">
		<blockquote>
			<p>Category: <strong class="text-primary"><%= @category.name %></strong></p>
			<p>Products: <strong class="text-primary"><%= @category.products.length %></strong></p>
		</blockquote>
	</div>
	<div class="col-md-6">
		<div class="pull-right">
			<%= link_to 'Create new Category', new_admin_category_path, class: "btn btn-primary" %>
			<%= link_to 'Add new Product', new_admin_product_path, class: "btn btn-success" %>
		</div>
	</div>
</div>
	
	
<table class="table table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Price</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @category.products.each do |product| %>
		<tr>
			<td><%= product.id %></td>
			<td><%= product.name %></td>
			<td><%= product.price %></td>
			
		</tr>
		<% end %>
	</tbody>
</table>
</div>




